<html>
  <head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8">
    <title>Düzgün Hürriyet</title>
  </head>
  <body>
    <h1>Düzgün Hürriyet</h1>
    <ul>
      <% for manset in @mansetler %>
        <li>
          <a href="<%=manset.link%>">
            <% if manset.text %>
              <h3><%= manset.text %></h3>
            <% end %>
            <img src="<%= manset.img %>">
          </a>
      <% end %>
    </ul>
  </body>
</html>

